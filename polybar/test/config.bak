[colors]
foreground  = #CACAC8
background  = #aa000000

t1	 = #8e0709
t2	 = #ED4800
t3	 = #101010
t4	 = #202020
t5	 = #303030
t6	 = #404040
t7	 = #505050
t8	 = #606060
t9	 = #000000
t10	 = #000000
t99 = colors.background
t100 = colors.background

; with transparency
[colors2]
foreground  = #CACAC8
background  = #aa000000

t1	 = #aa8e0709
t2	 = #aaED4800
t3	 = #aa101010
t4	 = #aa202020
t5	 = #aa303030
t6	 = #aa404040
t7	 = #aa505050
t8	 = #aa606060
t9	 = #aa000000
t10	 = #aa000000
t99 = colors.background
t100 = colors.background

[bar/bar]
monitor = eDP1
bottom = false
height = 17

override-redirect = false
width = 100%
enable-ipc = true

padding-left = 0

padding-right = 0
offset-x = 0
offset-y = 0

tray-detached = false
tray-position = right
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = 16
tray-padding = 0
tray-scale = 1

background = ${colors.background}
foreground = ${colors.foreground}

border-left-size = 0
border-right-size = 0
; border-color = ${self.background}

font-0 = Fantasque Sans Mono:size=11:dpi=138;2
font-1 = FontAwesome:size=10:dpi=138;2
font-2 = SauceCodePro Nerd:size=11;2

modules-left   = mpd i3
modules-center = xwindow
modules-right  =serverCheck pkg eth memory temperature cpu date

;##########################################################################################################################################################################################
;##########################################################################################################################################################################################

;### CENTER ###############################################################################################################################################################################
[module/xwindow]
type = internal/xwindow
label-maxlen = 30
label-padding   = 2

;### LEFT #################################################################################################################################################################################
[module/mpd]
type                  = internal/mpd
interval = 2

host = 127.0.0.1

label-song            = %title% - %artist%
label-song-maxlen     = 40
label-song-ellipsis   = true

format-online         =<label-song><toggle>
# <icon-prev>    <icon-seekb>  <toggle>  <icon-seekf>    <icon-next>     <icon-random>  <icon-repeat>

label-song-background = ${colors.t1}
icon-pause-background = ${colors.t1}
icon-play-background  = ${colors.t1}
icon-pause-foreground = ${colors.foreground}
icon-play-foreground  = ${colors.foreground}

label-song-padding = 0
icon-pause-padding = 1
icon-play-padding = 1

icon-prev  = 
icon-seekb = 
icon-stop  = 
icon-pause = 
icon-play  = 
icon-next  = 
icon-seekf = 

format-online-suffix                 = " "
format-online-suffix-background = ${colors.background}
format-online-suffix-foreground = ${colors.t1}

format-online-foreground = ${colors.foreground}
format-online-background = ${colors.t1}

; padding-left = 50
icon-random = 
icon-repeat = 
toggle-off-foreground = ${colors.grey}
toggle-on-foreground  = ${colors.blue}

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true

label-focused            = %icon%
label-focused-foreground = #ff4500
label-focused-padding    = 1

label-unfocused            = %icon%
label-unfocused-foreground = #aaaaaa
label-unfocused-padding    = 1

label-urgent            = %icon%
label-urgent-foreground = #FF5F5F
label-urgent-padding    = 1

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 

;### RIGHT ################################################################################################################################################################################
[module/date]
type     = internal/date
interval = 2

date     = " %d.%m.%Y"
date-alt = "  %A, %d. %B"

time     = " %H:%M"
time-alt = "%H:%M:%S"

format-prefix            = ""
format-prefix-foreground = ${colors.t1}
format-prefix-background = ${colors.t3}
label-background = ${colors.t1}
label-padding-right    = 0
label-padding = 0
format-padding   = 0
format           = <label>
label            = %time%  %date%

[module/cpu]
format-label       = internal/cpu

format-prefix            = ""
format-foreground = ${colors.t3}
format-background = ${colors.t4}

format             = <label>
label-background = ${colors.t3}
label-foreground = ${colors.foreground}
type      = internal/cpu
interval  = 2
label     = "  %percentage%% "
padding   = 0

[module/temperature]
type                  = internal/temperature
thermal-zone          = 0
warn-temperature      = 80

format             = <ramp><label>
format-background  = ${colors.t4}
label-background   = ${colors.t4}
label-padding = 2

format-prefix                 = ""
format-prefix-foreground = ${colors.t4}
format-prefix-background = ${colors.t5}
;format-prefix-background      = ${module/battery.format-background}
;format-prefix-foreground      = ${self.label-background}

;format-suffix                 = 
;format-suffix-foreground      = ${self.label-background}

;format-warn-prefix            = 
;format-warn-prefix-background = ${module/battery.format-background}
;format-warn-prefix-foreground = ${self.label-warn-background}

;format-warn-suffix            = 
;format-warn-suffix-foreground = ${self.label-warn-background}

format-warn           = <label-warn>
;label-warn-background = ${colors.t2}

ramp-background       = ${colors.t4}

label                 = %temperature%
label-warn            =  %temperature%

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "
ramp-3 = " "
ramp-4 = " "

[module/memory]
type             = internal/memory
interval         = 2
format           = <label>

label            =  %percentage_used%%

label-background = ${colors.t5}
label-padding   =  2

format-prefix            = ""
format-prefix-background = ${colors.t6}
format-prefix-foreground = ${colors.t5}

; format-suffix            = 
format-suffix-background = ${colors.background}
; format-suffix-foreground = ${module/cpu.format-background}

[module/eth]
type                          = internal/network
interface                     = enp2s0
interval                      = 3.0

format-connected              = <label-connected>
format-disconnected           = <label-disconnected>

label-connected-padding      = 2
label-disconnected-padding   = 2

label-connected               =  %downspeed%  %upspeed%
label-disconnected            = not connected :(

label-connected-foreground    = ${colors.foreground}
label-connected-background    = ${colors.t6}

label-disconnected-foreground    = ${colors.foreground}
label-disconnected-background    = ${colors.t6}

format-connected-prefix = ""
format-connected-prefix-background = ${colors.t7}
format-connected-prefix-foreground = ${colors.t6}

format-disconnected-prefix = ""
format-disconnected-prefix-background = ${colors.t7}
format-disconnected-prefix-foreground = ${colors.t6}

[module/pkg]
type = custom/script
interval = 120
format = <label>
label = "%output:0:30%"
exec = ~/.config/polybar/pkg.sh

; format-underline = ${colors.cyan}
label-padding   =  2

label-background = ${colors.t7}

format-prefix = ""
format-prefix-background = ${colors.t8}
format-prefix-foreground = ${colors.t7}

[module/serverCheck]
type = custom/script
interval = 300
format = <label>
exec = ~/.config/polybar/serverCheck.sh

label-background = ${colors.t8}
label-padding   =  2

format-prefix = ""
format-prefix-background = ${colors.background}
format-prefix-foreground = ${colors.t8}


;### DISABLED #############################################################################################################################################################################
[module/volume]
type                      		= internal/volume

format = <label>
label-muted-background  	= ${colors.t99}
label-volume-background  	= ${colors.t99}

format-volume 					= <label-volume>
format-muted  					= <label-muted>

label-muted   					=  " muted "
format-muted-padding 		= 0

label-volume = " %percentage%% "
format-volume-padding 		= 0

bar-volume-background 			= ${colors.t99}

[module/battery]
type    = internal/battery
battery = BAT1
adapter = AC
full-at = 98


format-charging    = <label-charging>
time-format        = %H:%M

format-discharging =  <label-discharging>
label-discharging  = "  %percentage%% "
label-charging  = "   %percentage%% "

format-charging-padding     = 0

format-charging-prefix = ""
format-charging-prefix-foreground = ${colors.t6}
format-charging-prefix-background = ${colors.t7}

format-discharging-prefix = ""
format-discharging-prefix-foreground = ${colors.t6}
format-discharging-prefix-background = ${colors.t7}

label-charging-background = ${colors.t6}
label-discharging-background = ${colors.t6}

format-full-background        = ${colors.t6}
format-charging-background    = ${colors.t6}
format-discharging-background = ${colors.t6}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 =  
animation-charging-framerate = 750

[module/temps]
type = custom/script
interval = 1
format = <label>
exec = ~/.config/polybar/cputemp.sh

label-background = ${colors.t5}
format-underline = ${colors.cyan}
label-padding   =  2

format-prefix            = 
format-prefix-background = #D3C1D6
format-prefix-foreground = ${self.label-background}

format-suffix            = 
format-suffix-background = ${self.label-background}
format-suffix-foreground = #B6A5C8

[module/wlan]
format-connected-prefix = ""
format-connected-prefix-background = ${colors.background}
format-connected-prefix-foreground = ${colors.t7}

format-disconnected-prefix = ""
format-disconnected-prefix-background = ${colors.background}
format-disconnected-prefix-foreground = ${colors.t7}

type      = internal/network
interface = wlp3s0
; p3s0
interval  = 3.0

label-connected-padding      = 2
label-disconnected-padding   = 2

format-connected              = <label-connected>
format-disconnected           = <label-disconnected>

label-connected-foreground    = ${colors.foreground}
label-connected-background    = ${colors.t7}

label-disconnected-foreground    = ${colors.foreground
label-disconnected-background    = ${colors.t7}

label-connected    =  %downspeed%
label-disconnected = no wifi :(

[module/ssid]
type = internal/network
interface = wlp3s0
interval = 3.0
ping-interval = 10
;<ramp-signal>
format-connected =  <label-connected>
label-connected = %essid%
label-disconnected =    not connected
label-disconnected-foreground = #66

label-connected-background = ${colors.t7}
label-disconnected-background = ${colors.t7}

[module/weather]
type = custom/script
interval = 300
format = <label>
exec = ~/.config/polybar/weather-git.sh

label-background = ${colors.background}
label-padding   =  2

; format-prefix            = 
format-prefix-background = #B6A5C8
format-prefix-foreground = ${colors.background}

; format-suffix            = 
format-suffix-background = ${colors.background}
format-suffix-foreground = #AD9CC3

[module/clock]
type = custom/script
interval = 1
format = <label>
exec = ~/.config/polybar/clock.sh

format-prefix            = ""
format-prefix-foreground = ${colors.t1}
format-prefix-background = ${colors.t3}
label-background = ${colors.t1}
label-padding-right    = 0