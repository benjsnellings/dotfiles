{
  "name": "snellin-builder",
  "description": "Personal Amazon development agent with full tool access, matching Claude Code configuration",
  "mcpServers": {
    "builder-mcp": {
      "command": "builder-mcp",
      "args": [
        "--include-tools",
        "SkillsTool",
        "--skill-paths",
        "/Users/snellin/.aim/packages/local/StoreGenSpecStudioSkills-1.0/skills",
        "--skill-name-filter",
        "spec-explorer"
      ]
    },
    "spec-studio-mcp": {
      "command": "mcp-spec-studio-server",
      "args": []
    },
    "workplace-chat-mcp": {
      "command": "workplace-chat-mcp",
      "args": []
    },
    "agentspaces-mcp": {
      "command": "agentspaces-mcp",
      "args": []
    }
  },
  "tools": [
    "@builtin",
    "@builder-mcp"
  ],
  "allowedTools": [
    "*",
    "@"
  ],
  "resources": [
    "file://~/.kiro/steering/**/*.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "aim skills inject",
        "timeout_ms": 10000
      }
    ]
  },
  "useLegacyMcpJson": false
}