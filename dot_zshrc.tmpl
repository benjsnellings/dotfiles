export PATH=$HOME/bin:$PATH
export PATH=$HOME/tools:$PATH
export PATH=$HOME/.local/bin:$PATH
export PATH="$HOME/.toolbox/bin:$PATH"
export PATH="$HOME/.cargo/env:$PATH"

# Add Zfunctions
