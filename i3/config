######################### SELF MADE STUFF #############################################

#Setup Screen
exec --no-startup-id "$HOME/.i3/screen_setup.sh"
exec --no-startup-id "$HOME/.i3/setup_workspace.sh"
exec --no-startup-id compton -CGb
exec --no-startup-id synergy
exec --no-startup-id nitrogen --restore
exec --no-startup-id "$HOME/.polybar/run_polybar.sh"
exec --no-startup-id "xrdb $HOME/.Xresources/config" #Enable rofi theme

gaps inner 0
gaps outer 0

#Enable lock timeout
exec xautolock -time 10 -locker "$HOME/.i3/lock/test_lock_2.sh" -notify 20 -notifier 'xset dpms force off' &

# Show network manager on i3Status bar
exec --no-startup-id nm-applet

# Turn off Nautalis Desktop
gsettings set org.gnome.desktop.background show-desktop-icons false

# Turn off mouse focus
focus_follows_mouse no

#Enable Screenshots
bindsym Print exec scrot 'Screenshot-%Y-%m-%d-%H%M%S_scrot.png' -e 'mv $f ~/Pictures/screenshots'

#### Window Specific Controls
for_window [class="^.*"] border pixel 1
#for_window [class="Gnome-terminal"] border normal

##### Bindings
bindsym $mod+Control+Left exec "python $HOME/.i3/workspace_move.py left"
bindsym $mod+Control+Right exec "python $HOME/.i3/workspace_move.py right"

# start rofi
bindsym $mod+space       exec "rofi -modi drun -show drun -theme royal-sky"
bindsym $mod+Shift+space exec "rofi -show ssh -theme royal-sky"

# Lock i3
# bindsym $mod+shift+0 exec "$home/.i3/lock.sh $home/pictures/icons/lock.png"
bindsym Scroll_Lock exec "$HOME/.i3/lock/test_lock_2.sh"
bindsym $mod+Shift+greater move container to output right
bindsym $mod+Shift+less move container to output left

# Media Keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo +10%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo -10%
bindsym XF86AudioMute exec pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle

# Spotfiy Controls
bindsym XF86AudioPlay exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioStop exec mdbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym XF86AudioNext exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

